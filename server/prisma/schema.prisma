// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Um habito: beber 2l de agua
model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  dayHabits DayHabit[]
  weekDays  HabitWeekDays[]

  @@map("habits")
}

// Recorencia de dias para fazer tal habito, por exemplo, beber agua 2l terça e quinta. Toda terça e quinta vai estar com o quadradinho que nesse dia voce tem dois habitos a serem cumpridos
model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int // 0: domingo, 1: segunda etc

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

// Os dias da tabela, cada dia pode ter varios habitos: Segunda-feira03/01: beber agua e exercitar, Segunda-feira04/01: beber agua, caminhar e exercitar. 
model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayHabits DayHabit[]

  @@unique([date])
  @@map("days")
}

// A tabela pivot, que são os habitos daquele dia
model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id])
  @@map("day_habits")
}
